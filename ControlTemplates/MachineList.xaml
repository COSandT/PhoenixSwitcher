<UserControl x:Class="PhoenixSwitcher.ControlTemplates.MachineList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoenixSwitcher.ControlTemplates"
             xmlns:viewmodels="clr-namespace:PhoenixSwitcher.ViewModels"
             xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
             mc:Ignorable="d" d:DesignWidth="222.125" d:DesignHeight="628.637">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                 Color="Blue" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <viewmodels:MachineListViewModel />
    </UserControl.DataContext>
    <Border
        BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
        BorderThickness="2">
        <Grid Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}"
              IsEnabled="{Binding bIsMachineListEnabled}">
            <Grid.RowDefinitions>
                <RowDefinition Height="7.5*"/>
                <RowDefinition Height="5.5*"/>
                <RowDefinition Height="87*"/>
            </Grid.RowDefinitions>

            <!--Machine List Header-->
            <Border
                Grid.Row="0"
                BorderThickness="2"
                BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}" >
                <Viewbox
                    Margin="10,0"
                    Grid.Column="1">
                    <TextBlock Text="{Binding MachineListHeaderText}" FontWeight="DemiBold" />
                </Viewbox>
            </Border>
            <!-- Scan Machine Box -->
            <Border
                Grid.Row="1"
                BorderThickness="2"
                BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}" >
                <Grid>
                    <TextBox
                        x:Name="ScannedMachineText"
                        KeyUp="ScannedMachineText_KeyUp">
                    </TextBox>
                    <TextBlock
                        Text="{Binding SelectToScanText}"
                        Foreground="Gray"
                        FontStyle="Oblique"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFocused, ElementName=ScannedMachineText}" Value="true">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
            <!--Machine List-->
            <Border 
                Grid.Row="2"
                BorderThickness="2"
                Padding="5"
                BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}" >
                <ListBox x:Name="MachineListBox" ItemsSource="{Binding ListViewItems}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectionChanged="ListView_SelectionChanged"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Padding" Value="5,0,5,0"/>
                            <Setter Property="Margin" Value="0,0,0,1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="OuterBorder" CornerRadius="10" BorderThickness="2"
                                            BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}">
                                            <ContentPresenter
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Selected (active or inactive) -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="OuterBorder" Property="Background" Value="{DynamicResource {x:Static adonisUI:Brushes.AccentBrush}}"/>
                                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{DynamicResource {x:Static adonisUI:Brushes.AccentForegroundBrush}}"/>
                                            </Trigger>
                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="OuterBorder" Property="Background" Value="{DynamicResource {x:Static adonisUI:Brushes.AccentHighlightBrush}}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="2">
                                <Viewbox>
                                    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource {x:Static adonisUI:Brushes.ForegroundBrush}}" TextAlignment="Center" />
                                </Viewbox>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>
    </Border>

</UserControl>
