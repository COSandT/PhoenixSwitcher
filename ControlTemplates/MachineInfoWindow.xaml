<UserControl x:Class="PhoenixSwitcher.ControlTemplates.MachineInfoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoenixSwitcher.ControlTemplates"
             xmlns:viewmodels="clr-namespace:PhoenixSwitcher.ViewModels"
             xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
             mc:Ignorable="d" d:DesignWidth="385" d:DesignHeight="229.425" >

    <Border
        Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}"
        BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
        BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <!-- Bundle Info Display-->
            <Grid
                Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="18*"/>
                    <RowDefinition Height="82*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderThickness="2"
                    Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}"
                    BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}">
                    <Viewbox Margin="5,5,10,5">
                        <TextBlock Text="{Binding SelectedMachineHeaderText}" FontWeight="DemiBold" />
                    </Viewbox>
                </Border>
                <Border Grid.Row="1" BorderThickness="2"
                    Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}"
                    BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}">
                    <Viewbox VerticalAlignment="Top" HorizontalAlignment="Left">
                        <Grid Margin="4,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Machine Number Long -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding MachineN17DescriptionText}" />
                                <TextBlock Grid.Column="2" Text="{Binding MachineN17ValueText}" />
                            </Grid>
                            <!-- Machine Number Short-->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding MachineN9DescriptionText}" />
                                <TextBlock Grid.Column="2" Text="{Binding MachineN9ValueText}" />
                            </Grid>
                            <!-- Machine Type-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding MachineTypeDescriptionText}" />
                                <TextBlock Grid.Column="2" Text="{Binding MachineTypeValueText}" />
                            </Grid>
                            <!-- VAN -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding VANDescriptionText}" />
                                <TextBlock Grid.Column="2" Text="{Binding VANValueText}" />
                            </Grid>
                            <!-- PCM Type-->
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding SeriesDescriptionText}" />
                                <TextBlock Grid.Column="2" Text="{Binding SeriesValueText}" />
                            </Grid>
                            <!-- Display Type-->
                            <Grid Grid.Row="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding DisplayTypeDescriptionText}" />
                                <TextBlock Grid.Column="2" Text="{Binding DisplayTypeValueText}" />
                            </Grid>
                            <!-- Bundle -->
                            <Grid Grid.Row="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding BundleDescriptionText}" />
                                <TextBlock Grid.Column="2" Text="{Binding BundleValueText}" />
                            </Grid>
                        </Grid>
                    </Viewbox>
                    
                </Border>
                
            </Grid>
            <!-- Buttons -->
            <Border Grid.Row="1" BorderThickness="2"
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}"
                BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Start Process Button-->
                    <Button Grid.Column="0" Click="StartProcess_Click"
                        Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
                        Visibility="{Binding StartButtonVisibility}">
                        <Viewbox>
                            <TextBlock Text="{Binding StartButtonText}" />
                        </Viewbox>
                    </Button>
                    <!-- Test Process Button-->
                    <Button Grid.Column="0" Click="TestProcess_Click"
                        Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
                        Visibility="{Binding TestButtonVisibility}">
                        <Viewbox>
                            <TextBlock Text="{Binding TestButtonText}" />
                        </Viewbox>
                    </Button>
                    <!-- Turn off Power-->
                    <Button Grid.Column="1" Click="ShutDownPhoenixProcess_Click"
                        Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
                        Visibility="{Binding ShutDownPhoenixButtonVisibility}">
                        <Viewbox>
                            <TextBlock Text="{Binding ShutDownPhoenixText}" />
                        </Viewbox>
                    </Button>
                    <!-- Finish Process Button-->
                    <Button Grid.Column="1" Click="FinishProcess_Click"
                        Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}"
                        Visibility="{Binding FinishButtonVisibility}">
                        <Viewbox>
                            <TextBlock Text="{Binding FinishButtonText}" />
                        </Viewbox>
                    </Button>
                </Grid>

            </Border>
        </Grid>
    </Border>
</UserControl>
