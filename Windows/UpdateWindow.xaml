<Window x:Class="PhoenixSwitcher.Windows.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixSwitcher.Windows"
        xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="{Binding WindowName}" Height="180" Width="320">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid>
        <Border Padding="20" CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0">
                    <TextBlock Margin="0,0,0,10" FontSize="16" Text="{Binding UpdatingText}" />
                </Viewbox>
                <ProgressBar  Grid.Row="1" IsIndeterminate="True" Height="20"/>
            </Grid>
        </Border>
    </Grid>
</Window>
