<Window x:Class="PhoenixSwitcher.Windows.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixSwitcher.Windows"
        xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI"
        mc:Ignorable="d"
        Title="{Binding WindowName}" Height="360" Width="640">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid>
        <Border Padding="20" CornerRadius="6">
            <StackPanel>
                <TextBlock Text="{Binding UpdatingText}"
                       FontSize="16"
                       Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Height="20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
