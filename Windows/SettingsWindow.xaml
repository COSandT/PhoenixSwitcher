<Window x:Class="PhoenixSwitcher.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixSwitcher.Windows"
        xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:viewlibrary="clr-namespace:CosntCommonViewLibrary.XmlEditor;assembly=CosntCommonViewLibrary"
        mc:Ignorable="d"
        Title="{Binding WindowName}" Height="450" Width="800">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border 
            Grid.Row="0"
            BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer2BorderBrush}}"
            BorderThickness="2">
            <Menu
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}">
                <MenuItem 
                    Header="{Binding SaveButtonText}" 
                    Click="Save_Click" />
            </Menu>
        </Border>
        <Border 
            Grid.Row="1"
            BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer2BorderBrush}}"
            BorderThickness="2">
            <viewlibrary:XmlEditor 
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}"
                XmlFile="{Binding XmlToEditPath}" 
                Command="{Binding OnSaveCommand}" />
        </Border>
    </Grid>
</Window>
