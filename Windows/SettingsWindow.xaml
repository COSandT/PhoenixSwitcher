<Window x:Class="PhoenixSwitcher.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixSwitcher.Windows"
        xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:viewlibrary="clr-namespace:CosntCommonViewLibrary.XmlEditor;assembly=CosntCommonViewLibrary"
        mc:Ignorable="d"
        Title="{Binding WindowName}"  Height="360" Width="640">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="2"
            BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer0BorderBrush}}">
            <Menu
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer0BackgroundBrush}}">
                <MenuItem 
                    Header="{Binding FileText}">
                    <MenuItem Click="Save_Click" 
                        Header="{Binding SaveButtonText}" />
                </MenuItem>
            </Menu>
        </Border>
        <Border Grid.Row="1" BorderThickness="2"
            BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer1BorderBrush}}">
            <viewlibrary:XmlEditor 
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}"
                XmlFile="{Binding XmlToEditPath}" 
                Command="{Binding OnSaveCommand}" />
        </Border>
    </Grid>
</Window>
