<Window x:Class="PhoenixSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixSwitcher"
        xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:viewlibrary="clr-namespace:CosntCommonViewLibrary.XmlEditor;assembly=CosntCommonViewLibrary"
        xmlns:controltemplates="clr-namespace:PhoenixSwitcher.ControlTemplates"
        mc:Ignorable="d"
        Title="{Binding WindowName}" Height="450" Width="800">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Border Grid.Row="0"
            BorderBrush="{DynamicResource {x:Static adonisUI:Brushes.Layer2BorderBrush}}"
            BorderThickness="2">
            <Menu
                Background="{DynamicResource {x:Static adonisUI:Brushes.Layer1BackgroundBrush}}">
                <MenuItem 
                    Header="{Binding SettingsText}" 
                    Click="ChangeSettings_Click" />
                <MenuItem 
                    Header="{Binding LanguageSettingsText}" 
                    Click="ChangeSettings_Click" />
                <MenuItem 
                    Header="{Binding AboutText}" 
                    Click="ChangeSettings_Click" />
            </Menu>
        </Border>
        <viewlibrary:XmlEditor  Grid.Row="1"
                                XmlFile="{Binding FileEditorName}"
                                Background="HotPink"/>
    </Grid>
</Window>
